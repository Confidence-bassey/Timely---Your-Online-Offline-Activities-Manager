<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchedulerGenerator">

        <EditText
            android:id="@+id/editTextSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter schedule events here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Schedule"
            android:onClick="generateSchedule"
            android:layout_below="@id/editTextSchedule"/>

        <TextView
            android:id="@+id/textViewSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSchedule"
            android:textSize="18sp"/>


</RelativeLayout>